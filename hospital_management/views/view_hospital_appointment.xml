<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_hospital_appointment_tree" model="ir.ui.view">
            <field name="name">hospital.appointment.tree</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <tree sample="1" multi_edit="1" decoration-success="state == 'done'" decoration-danger="state == 'cancel'"
                      decoration-info="state == 'in_consultation'">    
                    <field name="patient_id"/>
                    <field name="doctor_id" widget='many2one_avatar_user'/>
                    <field name="appointment_time" />
                    <field name="activity_ids" widget="list_activity" optional="show"/>
                    <field name="booking_date"/>
                    <field name="priority" optional="show"/>
                    <field name="prescription" optional="hide" />
                    <field name="state" widget="badge" 
                    decoration-success="state == 'done'" decoration-danger="state == 'cancel'"
                    decoration-warning="state == 'draft'" decoration-info="state == 'in_consultation'"/>
                </tree>
            </field>
        </record>

        <record id="view_hospital_appointment_form" model="ir.ui.view">
            <field name="name">hospital.appointment.form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <form delete="0">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_consultation,done"/>

                        <button name="action_draft" string="Draft" class="oe_highlight" 
                                type="object" invisible="state in ('draft','in_consultation','done')"
                                confirm="Are you sure you want to move this Appoinment to Draft Again ?"/>
                        <button name="action_in_consultation" string="In Consultation" class="oe_highlight" 
                                type="object" invisible="state in ('in_consultation','done','cancel')"/>
                        <button name="action_done" string="Done" class="oe_highlight" data-hotkey="v"
                                type="object" invisible="state in ('draft','done','cancel')"/>
                        <button name="action_cancel" string="Cancel" class="oe_highlight" data-hotkey="z"
                                type="object" invisible="state in ('draft','done','cancel')"/>
                    </header>
                    <sheet>
                        <div class="oe_tital">
                            <h1>
                                <field name="priority" widget="priority"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="patient_id" default_focus="1"/>
                                <field name="appointment_time"/>
                                <field name="gender"/>
                            </group>
                            <group>
                                <field name="doctor_id" widget="many2one_avatar"/>
                                <field name="booking_date" readonly="1"/>
                                <field name="active" invisible="True"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="prescription" string="Prescription">
                                <field name="prescription" options="{'collaborative': true, 'resizable': true}"  
                                       placeholder="Enter your Prescrition here........."/>
                            </page>
                            <page name="pharmacy" string="Pharmacy">
                                
                            </page>
                        </notebook>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hospital_appointment_search" model="ir.ui.view">
            <field name="name">hospital.appointment.search</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <search>
                    
                </search>
            </field>
        </record>

        <record id="action_hospital_appointment" model="ir.actions.act_window">
            <field name="name">Hospital Appointment</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">tree,form,search</field>            
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Your First Appointment
                </p>
                <p>
                    Select Patient and Create Appointment.
                </p>
            </field>
        </record>
    </data>
</odoo>
